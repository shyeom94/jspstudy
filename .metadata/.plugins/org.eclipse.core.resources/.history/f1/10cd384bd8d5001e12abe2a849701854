<body>

  <!-- <a> 태그 요청 -->
  <div>
    <!--<a href="/servlet/request?number=10&number2=1.5">요청</a>-->
    <a id="link" data-number="50" data-number2="5.5">요청</a>
  </div>
  
  <script>
        var link = document.getElementById('link');
        link.href = '/servlet/request?number=' + link.dataset.number + '&number2=' + link.dataset.number2;
// 프로젝트경로(contextpath)/서블릿경로(urlmapping)?서버쪽으로보내는내용
		// null 값 전달 테스트 
  </script>
  
  <hr>
  
  <!-- JavaScript : location 객체 요청 --> 
  <div data-number="30">
    <button type="button" id="btn" data-number2="3.5">요청</button>
  </div>
  
  <script>  
  // jQuery 이용하기 
  let $btn = $('#btn');
  $btn.on('click', (evt)=>{
	  let number = $btn.parent().data('number');
	  let number2 = $btn.data('number2');
	  location.href = `/servlet/request?number=${number}&number2=${number2}`;
  }) 
  </script>
  
  <hr>
  
  <!-- <form> 태그 요청 --> 
  <form id="frm" method="POST" action="/servlet/request"></form> 

